<!DOCTYPE HTML>
<html>
 <head>
  <title> New Document </title>
  <meta charset='utf-8'>
  <meta name="Generator" content="EditPlus">
  <meta name="Author" content="">
  <meta name="Keywords" content="">
  <meta name="Description" content="">
  <meta name="viewport" content="width=device-width,initial-scale=1">
<!--[if lt IE 9]>
<script src="{{theme}}/js/html5.js"></script>
<![endif]-->
  <link href="{{theme}}/css/bootstrap.min.css" rel="stylesheet" media="screen">
  <link rel='stylesheet' type='text/css' href='{{theme}}/css/style.css'/>
  <!--link rel="stylesheet" media="screen and (max-width: 600px)" href="small.css" /-->


  <style>
	/*
	@media screen and (min-width: 900px) {
		.class {
			background: #666;
		}
	}
	*/
  </style>
 </head>

 <body>
<div class='warper1000'>
  
	<div class='header'>
		<a class='logo' href='/'><img src='{{theme}}/images/logo.png'/></a>
		<form class="form-search form-inline" methpd='get' action='/search'>
			<input type="text" class="input-medium search-query" name='query' placeholder='请输入品牌'>
			<button type="submit" class="btn btn-primary">直接搜索</button>
	    </form>
	</div>

	<div class='top-banner'>
		<img src='http://placehold.it/1000x90'>
	</div>
	
	<div class='content'>
		<div class='main'>
			<div class='search-title'>
				<span class='float-right go-top'>返回顶部</span>
				<strong>
					<%if(search){%>
						<%= brand %>
					<%}else{%>
						<%= category %>
					<%}%></strong>
			</div>
			<div class='result-list'>
				<ul>
				<% if (search){%>
				<% if (types.length) { %>
				<% types.forEach(function(type){ %>
					<li>
						<div class='makes'>
							<%= type.type %>
							<span class='float-right'>
							最高人气：<%= type.parts[0].comment_info %>
							</span>
							<i class='float-right'>
								&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
							</i>
							<span class='float-right'>
							（<%= type.parts.length %>）件商品在售
							</span>
						</div>
						<table>
						<tr>
							<th style='width:480px'>产品名称</th>
							<th style='width:80px'>价格</th>
							<th style='width:40px'>人气</th>
							<th>来源</th>
						</tr>
						<% type.parts.forEach(function(part){ %>
						<tr>
							<td class='td-first' style='width:480px'>
								<strong>
									<a href="<%= part.url %>">
									<%= part.name %>
									</a>
								</strong>
							</td>
							<td style='width:80px'>
								<%= part.price %>
							</td>
							<td style='width:40px'>
								<%= part.comment_info %>
							</td>
							<td>
								<%= part.from_site %>
							</td>
						</tr>
				  		<% }) %>
				  		</table>
					</li>
				<% }) %>
				<% } %>

				<% }else{ %>

				<% if (brands.length) { %>
				<% brands.forEach(function(brand){ %>
					<li>
						<div class='makes'>
							<%= brand.brand %>
							<span class='float-right'>
							最高人气：<%= brand.parts[0].comment_info %>
							</span>
							<i class='float-right'>
								&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
							</i>
							<span class='float-right'>
							（<%= brand.parts.length %>）件商品在售
							</span>
						</div>
						<table>
						<tr>
							<th style='width:480px'>产品名称</th>
							<th style='width:80px'>价格</th>
							<th style='width:40px'>人气</th>
							<th>来源</th>
						</tr>
						<% brand.parts.forEach(function(part){ %>
						<tr>
							<td class='td-first' style='width:480px'>
								<strong>
									<a href="<%= part.url %>">
									<%= part.name %>
									</a>
								</strong>
							</td>
							<td style='width:80px'>
								<%= part.price %>
							</td>
							<td style='width:40px'>
								<%= part.comment_info %>
							</td>
							<td>
								<%= part.from_site %>
							</td>
						</tr>
				  		<% }) %>
				  		</table>
					</li>
				<% }) %>
				<% } %>
				<% } %>
				</ul>
			</div>
		</div>
		<div class='right'>
			<div class='type-tree no-float'>
				<h2 class='title'>分类查询</h2>
				<div class='content'>
		<% if (cats.length) { %>
		    <% cats.forEach(function(category){ %>
			<dl>
				<dt><a href='?type=<%= category._id %>'><%= category.name %></a></dt>
			</dl>
		    <% }) %>
		<% } %>
				</div>
			</div>	
		</div>
	</div>
</div>
<script src="{{theme}}/js/jQuery-min-v1.9.1.js" type="text/javascript" ></script>
<script src="{{theme}}/js/bootstrap.min.js" type="text/javascript" ></script>
<script src="{{theme}}/js/jQuery-keepTop.js" type="text/javascript" ></script>
<script src='{{theme}}/js/mender.js' type='text/javascript'></script>
<script src="{{theme}}/js/style.js" type="text/javascript" ></script>
 </body>
</html>
